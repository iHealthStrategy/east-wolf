<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_size_360dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/button_round_shape_enabled"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="6dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/layout_size_10dp"
        android:paddingLeft="@dimen/layout_size_20dp"
        android:paddingRight="@dimen/layout_size_20dp"
        android:text="提示"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_1dp"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_100dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:layout_marginBottom="@dimen/layout_size_10dp"
        android:layout_marginLeft="@dimen/layout_size_10dp"
        android:layout_marginRight="@dimen/layout_size_10dp">

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/layout_size_10dp"
            android:text="恭喜您，签到成功！谢谢！"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/layout_size_3dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/layout_size_6dp"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:layout_marginBottom="@dimen/layout_size_10dp"
        android:layout_marginLeft="@dimen/layout_size_6dp"
        android:layout_marginRight="@dimen/layout_size_6dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/btn_dialog_counter_back"
            android:layout_width="@dimen/layout_size_140dp"
            android:layout_height="@dimen/layout_size_32dp"
            android:padding="@dimen/layout_size_6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_round_shape_white"
            android:text="3 秒后自动返回"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/btn_dialog_back_immediately"
            android:layout_width="@dimen/layout_size_100dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_size_6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:text="立即返回 >>"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
