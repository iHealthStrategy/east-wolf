<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_time_line_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_line_one"
            android:layout_width="@dimen/layout_size_23dp"
            android:layout_height="@dimen/layout_size_23dp"
            android:background="@drawable/shape_timeline_point_on"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_13dp"
            android:text="@string/time_line_text_one"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/time_line_one"
            android:layout_width="@dimen/layout_size_80dp"
            android:layout_height="@dimen/layout_size_1dp"
            android:layout_marginLeft="@dimen/layout_size_13dp"
            android:layout_marginRight="@dimen/layout_size_17dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time_line_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_line_two"
            android:layout_width="@dimen/layout_size_23dp"
            android:layout_height="@dimen/layout_size_23dp"
            android:background="@drawable/shape_timeline_point_off"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorFFFFFF"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_13dp"
            android:text="@string/time_line_text_two"
            android:textColor="@color/color_time_line_point_off"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/time_line_two"
            android:layout_width="@dimen/layout_size_80dp"
            android:layout_height="@dimen/layout_size_1dp"
            android:layout_marginLeft="@dimen/layout_size_13dp"
            android:layout_marginRight="@dimen/layout_size_17dp"
            android:background="@color/color_time_line_point_off" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time_line_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_line_three"
            android:layout_width="@dimen/layout_size_23dp"
            android:layout_height="@dimen/layout_size_23dp"
            android:background="@drawable/shape_timeline_point_off"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/colorFFFFFF"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_13dp"
            android:text="@string/time_line_text_three"
            android:textColor="@color/color_time_line_point_off"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/time_line_three"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_size_5dp"
            android:visibility="invisible"
            android:background="@color/color_time_line_point_off" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time_line_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_line_four"
            android:layout_width="@dimen/layout_size_16dp"
            android:layout_height="@dimen/layout_size_16dp"
            android:background="@drawable/shape_timeline_point_off"
            android:layout_marginLeft="@dimen/layout_size_5dp"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/color_time_line_point_off"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_title_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_5dp"
            android:text="@string/time_line_text_four"
            android:textColor="@color/color_time_line_point_off"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>