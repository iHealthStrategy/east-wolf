<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_size_360dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_size_10dp"
            android:layout_marginLeft="@dimen/layout_size_10dp"
            android:layout_marginTop="@dimen/layout_size_10dp"
            android:text="选择检查项目"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size_20dp"
        android:layout_marginRight="@dimen/layout_size_20dp"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_blood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_blood_check"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@drawable/checkbox_style"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp"
                android:text="抽血" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_foot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blood_check"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@drawable/checkbox_style"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp"
                android:text="足评" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size_20dp"
        android:layout_marginRight="@dimen/layout_size_20dp"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_eye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_blood_check"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@drawable/checkbox_style"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp"
                android:text="眼底" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_insulin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blood_check"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_insulin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@drawable/checkbox_style"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp"
                android:text="胰评" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size_20dp"
        android:layout_marginRight="@dimen/layout_size_20dp"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_nutrition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_blood_check"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_nutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@drawable/checkbox_style"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp"
                android:text="营养" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_teach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blood_check"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_teach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@drawable/checkbox_style"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp"
                android:text="患教" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size_20dp"
        android:layout_marginRight="@dimen/layout_size_20dp"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_quantization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_blood_check"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_quantization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@drawable/checkbox_style"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp"
                android:text="量表" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_size_10dp"
                android:button="@null"
                android:checked="false"
                android:paddingStart="@dimen/layout_size_5dp" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:background="@color/color_line_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/layout_size_10dp"
            android:layout_marginRight="@dimen/layout_size_10dp"
            android:layout_marginTop="@dimen/layout_size_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="@dimen/layout_size_90dp"
                android:layout_height="@dimen/layout_size_32dp"
                android:layout_gravity="center"
                android:background="@drawable/button_white_bg"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/layout_size_1dp"
                android:padding="@dimen/layout_size_6dp"
                android:text="取消"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_dialog_ok"
                android:layout_width="@dimen/layout_size_90dp"
                android:layout_height="@dimen/layout_size_32dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/layout_size_10dp"
                android:background="@drawable/button_blue_bg"
                android:gravity="center"
                android:padding="@dimen/layout_size_6dp"
                android:text="下一步"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
