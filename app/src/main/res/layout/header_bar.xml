<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/layout_size_16dp"
    android:paddingBottom="@dimen/layout_size_10dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">
    <View
        android:layout_width="@dimen/layout_size_3dp"
        android:layout_height="@dimen/layout_size_12dp"
        android:layout_marginLeft="@dimen/layout_size_20dp"
        android:layout_marginRight="@dimen/layout_size_12dp"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/hospital_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市朝阳医院-"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_main_hospital_department_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内分泌科"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold" />
    <TextClock
        android:id="@+id/clock_detect_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:format24Hour="HH:mm:ss"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/layout_size_10dp"
        android:layout_centerInParent="true"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <LinearLayout
        android:id="@+id/close_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/layout_size_20dp"
        >
        <ImageView
            android:layout_width="@dimen/layout_size_16dp"
            android:layout_height="@dimen/layout_size_14dp"
            android:layout_marginEnd="@dimen/layout_size_10dp"
            android:background="@mipmap/icon_go_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回首页"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            />

    </LinearLayout>
</LinearLayout>