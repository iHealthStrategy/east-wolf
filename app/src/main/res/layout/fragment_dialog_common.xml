<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_size_360dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/button_round_shape_enabled"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/layout_size_10dp"
            android:paddingLeft="@dimen/layout_size_20dp"
            android:paddingRight="@dimen/layout_size_20dp"
            android:text="提示"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="@dimen/layout_size_24dp"
            android:layout_height="@dimen/layout_size_24dp"
            android:background="@drawable/ic_close_white_48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layout_size_10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_1dp"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_size_10dp"
        android:layout_marginBottom="@dimen/layout_size_10dp"
        android:layout_marginLeft="@dimen/layout_size_10dp"
        android:layout_marginRight="@dimen/layout_size_10dp">

        <TextView
            android:id="@+id/tv_common_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/layout_size_10dp"
            android:text="--"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/layout_size_6dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/layout_size_6dp"

        android:layout_marginBottom="@dimen/layout_size_10dp"
        android:layout_marginLeft="@dimen/layout_size_6dp"
        android:layout_marginRight="@dimen/layout_size_6dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/btn_dialog_ok"
                android:layout_width="@dimen/layout_size_90dp"
                android:layout_height="@dimen/layout_size_32dp"
                android:padding="@dimen/layout_size_6dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_round_shape_white"
                android:text="确定"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:lineSpacingExtra="@dimen/layout_size_1dp"/>

            <TextView
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="@dimen/layout_size_90dp"
                android:layout_height="@dimen/layout_size_32dp"
                android:padding="@dimen/layout_size_6dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/layout_size_10dp"
                android:background="@drawable/button_round_shape_white"
                android:text="取消"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
