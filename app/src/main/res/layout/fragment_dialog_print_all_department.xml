<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_size_360dp"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_10dp"
            android:layout_marginTop="@dimen/layout_size_10dp"
            android:layout_marginBottom="@dimen/layout_size_10dp"
            android:paddingTop="@dimen/layout_size_5dp"
            android:text="打印就诊小条"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_print_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本次门诊就诊项目"
                    android:textColor="@color/color_print_title"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/layout_size_10dp"
                android:layout_marginTop="@dimen/layout_size_10dp"
                android:layout_marginRight="@dimen/layout_size_10dp"
                android:background="@color/color_line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/layout_size_10dp"
                        android:text="所看病种"
                        android:textColor="@color/color_print_title"
                        android:textSize="@dimen/text_size_10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_diseases_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/layout_size_20dp"
                        android:text=""
                        android:textColor="@color/color_print_title"
                        android:textSize="@dimen/text_size_10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/layout_size_10dp"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:layout_marginRight="@dimen/layout_size_10dp"
                    android:background="@drawable/shape_dash_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/layout_size_10dp"
                        android:text="患者姓名"
                        android:textColor="@color/color_print_title"
                        android:textSize="@dimen/text_size_10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/layout_size_20dp"
                        android:text=""
                        android:textColor="@color/color_print_title"
                        android:textSize="@dimen/text_size_10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/layout_size_10dp"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:layout_marginRight="@dimen/layout_size_10dp"
                    android:background="@drawable/shape_dash_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/layout_size_10dp"
                        android:text="上次看诊时间"
                        android:textColor="@color/color_print_title"
                        android:textSize="@dimen/text_size_10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_last_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/layout_size_20dp"
                        android:text=""
                        android:textColor="@color/color_print_title"
                        android:textSize="@dimen/text_size_10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/layout_size_10dp"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:layout_marginRight="@dimen/layout_size_10dp"
                    android:background="@drawable/shape_dash_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/layout_size_10dp"
                    android:text="上次看诊医生"
                    android:textColor="@color/color_print_title"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_last_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/layout_size_20dp"
                    android:text=""
                    android:textColor="@color/color_print_title"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/layout_size_10dp"
                android:layout_marginTop="@dimen/layout_size_5dp"
                android:layout_marginRight="@dimen/layout_size_10dp"
                android:background="@drawable/shape_dash_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/layout_size_10dp"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:text="本次看诊医生"
                    android:textColor="@color/color_print_title"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/layout_size_10dp"
                    android:layout_marginTop="@dimen/layout_size_5dp"
                    android:layout_marginRight="@dimen/layout_size_10dp"
                    android:background="@color/color_line_bg" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/layout_size_10dp"
                android:layout_marginTop="@dimen/layout_size_5dp"
                android:text="下次复诊时间"
                android:textColor="@color/color_print_title"
                android:textSize="@dimen/text_size_10sp"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:clickable="false"
                android:checked="false"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="__________ 周后"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_14sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:clickable="false"
                android:checked="false"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="__________ 月后"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/layout_size_10dp"
                android:layout_marginTop="@dimen/layout_size_1dp"
                android:layout_marginBottom="@dimen/layout_size_5dp"
                android:layout_marginRight="@dimen/layout_size_10dp"
                android:background="@color/color_line_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_size_10dp"
                android:layout_marginTop="@dimen/layout_size_5dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看诊结束后请将本小条交给相关工作人员。"
                    android:textColor="@color/color_print_title"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/layout_size_10dp"
                android:background="@color/color_line_bg" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_size_10dp"
                    android:layout_marginRight="@dimen/layout_size_10dp"
                    android:layout_marginBottom="@dimen/layout_size_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_dialog_cancel"
                        android:layout_width="@dimen/layout_size_113dp"
                        android:layout_height="@dimen/layout_size_33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_white_bg"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_dialog_print"
                        android:layout_width="@dimen/layout_size_113dp"
                        android:layout_height="@dimen/layout_size_33dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/layout_size_20dp"
                        android:background="@drawable/button_blue_bg"
                        android:gravity="center"
                        android:text="打印"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
